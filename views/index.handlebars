<h1>Burgers!</h1>
<div class="container">
  <div class="row">
    
    <div class="card">
      <div class="col-sm-12">
        <h2>Burgers that are not devoured!</h2>

        <ul>
          {{#each burgers}}
          {{#if devour}}
          {{> cats/burger-block devour=false}}
          {{/if}}
          {{/each}}
        </ul>

      </div>
    </div>
    
    
    
    <div class="card">
      <div class="col-sm-12">
        <h2>Burgers that are devoured!</h2>

        <ul>
          {{#each burgers}}
          {{#unless devour}}
          {{> cats/burger-block devour=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>


    
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Hungry?</label><br>
    <input type="radio" name="devour" value="1" checked> Devour!<br>
    {{!-- <input type="radio" name="devour" value="0"> Uneaten --}}
  </div>

  <button type="submit">Add Burger</button>
</form>